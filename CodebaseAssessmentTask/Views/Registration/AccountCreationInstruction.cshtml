@{
    ViewData["Title"] = "Account Creation Instruction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container position-relative" style="max-width: 430px; min-height: 100vh; padding-bottom: 120px;">
    <div class="pt-4 ps-2">
        <a href="javascript:history.back()" style="text-decoration: none; font-size: 1.5rem; color: #222;">&#8592;</a>
    </div>
    <div class="mt-4 mb-4 px-2">
        <h4 style="font-weight: 500; font-size: 1.5rem; color: #444;">With the all details, it will only take a few minutes to create an account</h4>
    </div>
    <div class="d-flex justify-content-center">
        <div class="card shadow-sm" style="border-radius: 18px; min-width: 340px; max-width: 370px; box-shadow: 0 4px 16px rgba(0,0,0,0.07);">
            <div class="card-body p-4">
                <h5 class="card-title mb-3" style="font-weight: bold;">Create account</h5>
                <hr />
                <ol class="list-unstyled mb-0">
                    <li class="mb-3 d-flex align-items-center">
                        <span class="step-number me-3">1</span>
                        <span>Your IC & Contact Details</span>
                    </li>
                    <li class="mb-3 d-flex align-items-center">
                        <span class="step-number me-3">2</span>
                        <span>Email & Mobile Verification</span>
                    </li>
                    <li class="mb-3 d-flex align-items-center">
                        <span class="step-number me-3">3</span>
                        <span>Privacy Policy</span>
                    </li>
                    <li class="d-flex align-items-center">
                        <span class="step-number me-3">4</span>
                        <span>Create PIN</span>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <form asp-action="CreateAccount" method="get">
        <button type="submit" class="btn next-btn">NEXT</button>
    </form>
</div>

<style>
    .step-number {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border: 1.5px solid #ccc;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        background: #fafafa;
        margin-right: 12px;
    }
    .next-btn {
        position: fixed;
        left: 0;
        bottom: 32px;
        width: 100vw;
        max-width: 430px;
        margin-left: 50%;
        transform: translateX(-50%);
        background: #b14fc2;
        color: #fff;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 12px;
        padding: 16px 0;
        box-shadow: 0 4px 16px rgba(177,79,194,0.10);
        border: none;
        letter-spacing: 1px;
    }
    .next-btn:active, .next-btn:focus {
        background: #a03eb0;
        color: #fff;
    }
    @@media (max-width: 430px) {
        .container {
            max-width: 100vw !important;
            padding-left: 0;
            padding-right: 0;
        }
        .next-btn {
            max-width: 100vw;
        }
    }
</style> 