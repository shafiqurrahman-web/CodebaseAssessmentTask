@{
    ViewData["Title"] = "Create account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container position-relative" style="max-width: 430px; min-height: 100vh; padding-bottom: 120px;">
    <div class="pt-4 ps-2 d-flex align-items-center justify-content-between">
        <a href="javascript:history.back()" style="text-decoration: none; font-size: 1.5rem; color: #222;">&#8592;</a>
        <span style="font-weight: 700; font-size: 1.1rem; margin-right: 1.5rem;">Create account</span>
        <span></span>
    </div>
    <div class="mt-4 mb-2 px-2">
        <div style="font-size: 0.85rem; font-weight: 600; color: #888; letter-spacing: 1px;">STEP 1 OF 4</div>
        <div class="progress mb-3" style="height: 4px; background: #e5e5e5; border-radius: 2px;">
            <div class="progress-bar" role="progressbar" style="width: 25%; background: #1ec98b; border-radius: 2px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <h4 style="font-weight: 500; color: #444; margin-top: 2.5rem; margin-bottom: 2rem;">Hello! Let's get your account set</h4>
        <form asp-action="CreateAccount" method="post" id="createAccountForm" autocomplete="off">
            <div class="mb-4">
                <label class="form-label" style="font-size: 0.85rem; font-weight: 600; color: #888; letter-spacing: 1px;">CUSTOMER NAME</label>
                <input type="text" class="form-control form-control-lg input-custom" name="CustomerName" placeholder="Please enter" required />
            </div>
            <div class="mb-4">
                <label class="form-label" style="font-size: 0.85rem; font-weight: 600; color: #888; letter-spacing: 1px;">IC NUMBER</label>
                <input type="number" class="form-control form-control-lg input-custom" name="ICNumber" placeholder="Please enter" required min="1000" step="1" />
            </div>
            <div class="mb-4">
                <label class="form-label" style="font-size: 0.85rem; font-weight: 600; color: #888; letter-spacing: 1px;">MOBILE NUMBER</label>
                <div class="input-group">
                    <span class="input-group-text input-custom" style="background: transparent; border: none; font-weight: 600; color: #222;">+60</span>
                    <input type="text" class="form-control form-control-lg input-custom" name="MobileNumber" placeholder="" required style="margin-left: -1px;" />
                </div>
            </div>
            <div class="mb-5">
                <label class="form-label" style="font-size: 0.85rem; font-weight: 600; color: #888; letter-spacing: 1px;">EMAIL ADDRESS</label>
                <input type="email" class="form-control form-control-lg input-custom" name="EmailAddress" placeholder="Please enter" required />
            </div>
            <button type="submit" class="btn next-btn" id="nextBtn" disabled>NEXT</button>
        </form>
    </div>
</div>

<script>
    const form = document.getElementById('createAccountForm');
    const nextBtn = document.getElementById('nextBtn');
    const inputs = form.querySelectorAll('input[required]');
    function checkInputs() {
        let allFilled = true;
        inputs.forEach(input => {
            if (!input.value.trim()) {
                allFilled = false;
            }
        });
        nextBtn.disabled = !allFilled;
        if (allFilled) {
            nextBtn.style.background = '#b14fc2';
            nextBtn.style.color = '#fff';
            nextBtn.style.cursor = 'pointer';
        } else {
            nextBtn.style.background = '#e5e1e7';
            nextBtn.style.color = '#bdbdbd';
            nextBtn.style.cursor = 'not-allowed';
        }
    }
    inputs.forEach(input => {
        input.addEventListener('input', checkInputs);
    });
    checkInputs();
</script>

<style>
    .input-custom {
        background: transparent;
        border: none;
        border-bottom: 2px solid #e5e5e5;
        border-radius: 0;
        box-shadow: none;
        font-size: 1.1rem;
        color: #888;
        padding-left: 0;
    }
    .input-custom:focus {
        border-bottom: 2px solid #1ec98b;
        box-shadow: none;
        color: #222;
    }
    .next-btn {
        width: 100%;
        background: #e5e1e7;
        color: #bdbdbd;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 12px;
        padding: 16px 0;
        border: none;
        letter-spacing: 1px;
        margin-bottom: 2rem;
        transition: background 0.2s, color 0.2s;
    }
    .next-btn:active, .next-btn:focus {
        background: #b14fc2;
        color: #fff;
    }
    @@media (max-width: 430px) {
        .container {
            max-width: 100vw !important;
            padding-left: 0;
            padding-right: 0;
        }
        .next-btn {
            max-width: 100vw;
        }
    }
</style> 