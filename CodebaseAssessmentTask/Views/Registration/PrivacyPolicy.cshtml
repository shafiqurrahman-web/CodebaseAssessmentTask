@model CodebaseAssessmentTask.Models.RegistrationPrivacyPolicyViewModel
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container position-relative" style="max-width: 430px; min-height: 100vh; padding-bottom: 120px;">
    <div class="pt-4 ps-2 d-flex align-items-center">
        <a href="javascript:history.back()" style="text-decoration: none; font-size: 1.5rem; color: #222;">&#8592;</a>
    </div>
    <div class="mt-4 mb-2 px-2">
        <div style="font-size: 0.85rem; font-weight: 600; color: #888; letter-spacing: 1px;">STEP 2 OF 4</div>
        <div class="progress mb-3" style="height: 4px; background: #e5e5e5; border-radius: 2px;">
            <div class="progress-bar" role="progressbar" style="width: 50%; background: #1ec98b; border-radius: 2px;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <h4 style="font-weight: 500; color: #444; margin-top: 2.5rem; margin-bottom: 2rem;">Privacy Policy</h4>

        <div style="color: #666; font-size: 1rem; line-height: 1.6;">
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam non facilisis nisi. Phasellus tincidunt lacus vel lacus ornare condimentum. Nam auctor fermentum erat, nec fermentum sapien dictum eu. Nunc porta, urna sed suscipit pulvinar, turpis purus scelerisque orci, vel placerat tellus velit non lacus. Suspendisse accumsan nisi porta, tincidunt velit eu, vulputate sem. Cras ex lorem, bibendum sed cursus a, feugiat quis nisi. Phasellus tristique scelerisque felis. Phasellus iaculis at mi eget volutpat.
            </p>
            <p style="color: #ccc; font-style: italic;">
                Pellentesque et mi a urna congue fermentum vitae vel urna. Pellentesque
            </p>
        </div>

        <form asp-action="PrivacyPolicy" method="post" id="privacyPolicyForm">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" id="agreeCheckbox" asp-for="Accepted">
                <label class="form-check-label" for="agreeCheckbox" style="color: #444;">
                    I agree to the Terms & Conditions and the Privacy Policy
                </label>
            </div>
            
            <button type="submit" class="btn next-btn w-100 mt-5" id="nextBtn" disabled>NEXT</button>
        </form>
    </div>
</div>

<script>
    const agreeCheckbox = document.getElementById('agreeCheckbox');
    const nextBtn = document.getElementById('nextBtn');

    function toggleButton() {
        nextBtn.disabled = !agreeCheckbox.checked;
        if (agreeCheckbox.checked) {
            nextBtn.style.background = '#b14fc2';
            nextBtn.style.color = '#fff';
            nextBtn.style.cursor = 'pointer';
        } else {
            nextBtn.style.background = '#e5e1e7';
            nextBtn.style.color = '#bdbdbd';
            nextBtn.style.cursor = 'not-allowed';
        }
    }

    agreeCheckbox.addEventListener('change', toggleButton);

    // Initial check on page load
    toggleButton();
</script>

<style>
    .next-btn {
        background: #e5e1e7;
        color: #bdbdbd;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 12px;
        padding: 16px 0;
        border: none;
        letter-spacing: 1px;
        transition: background 0.2s, color 0.2s;
    }
    .next-btn:active:not(:disabled), .next-btn:focus:not(:disabled) {
        background: #a03eb0;
        color: #fff;
    }
     .form-check-input:checked {
        background-color: #b14fc2;
        border-color: #b14fc2;
     }
    .form-check-input:focus {
        border-color: #b14fc2;
        box-shadow: 0 0 0 0.25rem rgba(177, 79, 194, 0.25);
    }
    @@media (max-width: 430px) {
        .container {
            max-width: 100vw !important;
            padding-left: 0;
            padding-right: 0;
        }
        .next-btn {
            max-width: 100vw;
        }
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 